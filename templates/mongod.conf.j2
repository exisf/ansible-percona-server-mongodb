# Where and how to store data.
storage:
  dbPath: {{ PM_data_dir }}
  journal:
    enabled: true
  
 

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

processManagement:
  fork: true
  pidFilePath: /var/run/mongod.pid
  timeZoneInfo: /usr/share/zoneinfo

# network interfaces
net:
  port: {{ PM_rs_port }}
  bindIp: "{{ PM_bind_IP }},127.0.0.1"

security:
  encryptionKeyFile: "{{ PM_encryption_key_file }}"
  enableEncryption: true
  #keyFile: "{{ PM_keyfile }}"
  javascriptEnabled: false



operationProfiling:
  mode: slowOp 
  slowOpThresholdMs: 100

replication:
  replSetName: rs1

